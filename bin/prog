#!/usr/bin/env ruby
name = "app/views/pages/prefectures.html.haml"
file = File.open(name)
data = file.read

data.gsub!(/text\.ken\{x: "(\d+)"/) do |m|
  "text.ken{x: \"#{$1.to_i + 20}\""
end

data.gsub!(/text\.shi\{x: "(\d+)"/) do |m|
  "text.shi{x: \"#{$1.to_i + 10}\""
end

File.open(name, "w") do |f|
  f.write data
end
