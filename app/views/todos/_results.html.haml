- todos.each do |todo|
  %tr{id: "todo_tr_#{todo.id}"}
    %td
      %span{class: todo.done ? "inactive" : "active"}= todo.description
    %td.col-md-2
      %span{class: todo.done ? "inactive" : "active"}= t("todo.priorities")[todo.priority]
    - if can?(:manage, Todo)
      %td.col-md-2.text-center
        = link_to t("edit"), edit_todo_path(todo), class: "btn btn-info btn-xs"
        = link_to t("todo.done"), toggle_todo_path(todo), class: "btn btn-success btn-xs", remote: true
