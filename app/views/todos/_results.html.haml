- todos.each do |todo|
  %tr
    %td
      %span{id: "todo_#{todo.id}", class: todo.done ? "active" : "inactive"}= todo.description
    %td.col-md-2= t("todo.priorities")[todo.priority]
    - if can?(:manage, Todo)
      %td.col-md-2.text-center
        = link_to t("edit"), edit_todo_path(todo), class: "btn btn-info btn-xs"
        = link_to t("todo.done"), toggle_todo_path(todo), class: "btn btn-success btn-xs", remote: true
