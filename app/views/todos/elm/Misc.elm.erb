module Misc exposing (..)

import Dict exposing (Dict)


highPriority : Int
highPriority = <%= @priority_high %>


lowPriority : Int
lowPriority = <%= @priority_low %>


i18Priorities : Dict Int String
i18Priorities =
  Dict.fromList [ <%= @priority_desc.each_pair.map{ |k, v| '(%d, "%s")' % [k, v] }.join(", ") %> ]


i18Cancel : String
i18Cancel = "<%= I18n.t('todo.elm.cancel') %>"


i18Confirm : String
i18Confirm = "<%= I18n.t('todo.elm.confirm') %>"


i18Delete : String
i18Delete = "<%= I18n.t('todo.elm.delete') %>"


i18Done : String
i18Done = "<%= I18n.t('todo.elm.done') %>"


i18Down : String
i18Down = "<%= I18n.t('todo.elm.down') %>"


i18NewTodo : String
i18NewTodo = "<%= I18n.t('todo.new') %>"


i18Up : String
i18Up = "<%= I18n.t('todo.elm.up') %>"


maxDesc : Int
maxDesc = <%= Todo::MAX_DESC %>


indexAndCreateUrl : String
indexAndCreateUrl =
  "/todos.json"


updateAndDeleteUrl : Int -> String
updateAndDeleteUrl id =
  "/todos/" ++ (toString id) ++ ".json"
