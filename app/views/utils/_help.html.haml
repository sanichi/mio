#help.modal.fade{tabindex: "-1", role: "dialog", "aria-labelledby" => "help-title", "data-backdrop" => "false"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %h5#help-title.modal-title= content_for?(:help_title) ? yield(:help_title) : t("help")
        %button{type: "button", class: "close", "data-dismiss" => "modal", "aria-label" => t("close")}
          %span{"aria-hidden" => "true"}= t("symbol.cross")
      .modal-body
        = yield :help
