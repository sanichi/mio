- defined?(index)    || index = nil
- defined?(cancel)   || cancel = nil
- defined?(centered) || centered = center(xl: 8, lg: 10)

.row
  %div{class: centered}
    = form_with model: object, html: { class: "crud" } do |form|
      %section
        .header.text-center
          %h3.d-inline= title
        .body
          - inputs.each do | param, label, type, options |
            .mb-3
              = render "utils/crud/#{type}", { form: form, param: param, label: label }.merge(options || {})
        .footer
          = render "utils/crud/buttons", form: form, object: object, index: index, cancel: cancel
