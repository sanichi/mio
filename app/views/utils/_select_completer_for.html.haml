- defined?(cwidth)      || cwidth = 2
- defined?(placeholder) || placeholder = t("search")

.form-group.row{class: object.errors[param].any? ? "has-error" : ""}
  = form.label param, text, class: "col-form-label col-#{col}-#{pad}"
  %div{class: "col-#{col}-#{width}"}= form.select param, menu, {}, class: "form-control input-sm"
  %div{class: "col-#{col}-#{cwidth}"}
    .form-inline
      .input-group
        = text_field_tag :term, "", id: "#{param}_completer", class: "form-control", size: "100%", placeholder: placeholder
  %div{class: "col-#{col}-#{12-pad-width-cwidth} help-block"}= object.errors[param].first
