.row
  .col-md-12
    = form_for fund, html: { class: "form-horizontal" } do |f|
      %fieldset
        - shared = { form: f, object: fund, col: "md", pad: 4 }
        = render "utils/text_field_for", shared.merge(param: :name, text: t("fund.name"), width: 6)
        = render "utils/text_field_for", shared.merge(param: :company, text: t("fund.company"), width: 6)
        = render "utils/select_for", shared.merge(param: :category, text: t("fund.category"), width: 4, menu: fund_category_menu(fund))
        = render "utils/select_for", shared.merge(param: :sector, text: t("fund.sector"), width: 4, menu: fund_sector_menu(fund))
        = render "utils/select_for", shared.merge(param: :stars, text: t("fund.stars"), width: 4, menu: fund_stars_menu(fund), multiple: true)
        = render "utils/text_field_for", shared.merge(param: :size, text: t("fund.size"), width: 3)
        = render "utils/select_for", shared.merge(param: :srri, text: t("fund.srri"), width: 2, menu: fund_srri_menu(fund))
        = render "utils/check_box_for", shared.merge(param: :srri_estimated, text: t("fund.srri_estimated"), width: 1)
        = render "utils/text_field_for", shared.merge(param: :annual_fee, text: t("fund.annual_fee"), width: 2)
        = render "utils/check_box_for", shared.merge(param: :performance_fee, text: t("fund.performance_fee"), width: 1)
      .row
        .offset-md-4.col-md-8
          = f.submit t("save"), class: "btn btn-primary"
          = link_to t("cancel"), fund.new_record?? funds_path : fund, class: "btn btn-secondary"
          - unless fund.new_record?
            = link_to t("delete"), fund, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
