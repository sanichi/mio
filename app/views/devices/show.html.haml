= render "utils/title", text: @device.name

.row
  .offset-md-2.col-md-8.offset-xl-3.col-xl-6
    %table{class: "table table-bordered table-striped"}
      %tbody
        %tr
          %th= t("device.name")
          %td= @device.name
        - @device.interfaces.each do |interface|
          %tr
            %th= t("interface.interface")
            %td= link_to interface.name, interface

.text-center
  = link_to t("device.devices"), devices_path, class: "btn btn-success"
  - if can?(:update, @device)
    = link_to t("edit"), edit_device_path(@device), class: "btn btn-info"
  - if can?(:delete, @device)
    = link_to t("delete"), @device, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
  - if can?(:create, Device)
    = link_to t("device.new"), new_device_path, class: "btn btn-info"
  - if can?(:create, Interface)
    = link_to t("interface.new"), new_interface_path, class: "btn btn-info"

- if @device.notes.present?
  .card.mt-3
    .card-header
      = t("notes")
    .card-body= @device.notes_html
