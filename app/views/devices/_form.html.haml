.row
  .col-md-10
    = form_for device, html: { class: "form-horizontal" } do |f|
      %fieldset
        - shared = { form: f, object: device, col: "md", pad: 3, width: 4}
        = render "utils/text_field_for", shared.merge(param: :name, text: t("device.name"))
        = render "utils/text_area_for", shared.merge(param: :notes, text: t("notes"), width: 9)

      .row
        .offset-md-3.col-md-9
          = f.submit t("save"), class: "btn btn-primary"
          = link_to t("cancel"), device.new_record?? devices_path : device, class: "btn btn-secondary"
          - unless device.new_record?
            = link_to t("delete"), device, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
