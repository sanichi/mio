= render "utils/title", text: @note.title

.panel.panel-default.top_margin
  .panel-heading
    = @note.title
  .panel-body= @note.stuff_html

.text-center.top_margin
  = link_to t("vocab.note.notes"), notes_path, class: "btn btn-success"
  - if can?(:edit, Note)
    = link_to t("edit"), edit_note_path(@note), class: "btn btn-info"
  - if can?(:delete, Note)
    = link_to t("delete"), @note, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
