= render "utils/title", text: t("bucket.bucket")

.row
  .offset-md-2.col-md-8
    %table{class: "table table-bordered"}
      %tbody
        %tr
          %th= t("bucket.name")
          %td= @bucket.name
        %tr
          %th= t("bucket.mark")
          %td= t("bucket.level")[@bucket.mark]
        %tr
          %th= t("bucket.sandra")
          %td= t("bucket.level")[@bucket.sandra]

.text-center
  - if can?(:update, @bucket)
    = link_to t("edit"), edit_bucket_path(@bucket), class: "btn btn-info"
  = link_to t("bucket.buckets"), last_path(:buckets), class: "btn btn-success"

- if @bucket.notes.present?
  .card.mt-3
    .card-header
      = t("notes")
    .card-body= @bucket.notes_html
