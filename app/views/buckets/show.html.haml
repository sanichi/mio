= render "utils/title", text: t("bucket.bucket")

.row
  .col-md-offset-3.col-md-6
    %table{class: "table table-bordered table-striped"}
      %tbody
        %tr
          %th= t("bucket.name")
          %td= @bucket.name
        %tr
          %th= t("bucket.mark")
          %td= t("bucket.level")[@bucket.mark]
        %tr
          %th= t("bucket.sandra")
          %td= t("bucket.level")[@bucket.sandra]

.text-center
  - if can?(:update, @bucket)
    = link_to t("edit"), edit_bucket_path(@bucket), class: "btn btn-info"
  = link_to t("bucket.buckets"), buckets_path, class: "btn btn-success"

- if @bucket.notes.present?
  .panel.panel-default.top_margin
    .panel-heading
      = t("notes")
    .panel-body= @bucket.notes_html
