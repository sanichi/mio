:ruby
  lo = Layout.new(xs: [4], md: [2]).to_a.first
  inputs = [[:q, t("search"), :text, lo, autofocus: true]]

= render "utils/title", key: "team.teams"

.row
  %div{class: center(md: 10, lg: 8, xl: 6)}
    %section
      .header.text-center
        %h3= t("team.teams")
      .body
        = render "utils/search/form", index: teams_path, inputs: inputs
        %table{class: "table table-bordered table-sm mt-3"}
          %thead
            %tr.d-flex
              %th.col-7= t("team.name")
              %th.col-4= t("team.short")
              %th.col-1.text-center= t("team.abbrev.division")
          %tbody{id: "results"}
            = render "results", teams: @teams
      - if can?(:create, Team)
        .footer
          = link_to t("team.new"), new_team_path, class: "btn btn-primary btn-sm"
