= render "utils/title", text: @radical.character_name(linked: true), header: true

.row
  .offset-md-2.col-md-8.offset-lg-3.col-lg-6
    %table{class: "table table-bordered"}
      %tbody
        %tr.d-flex
          %td.col-3= t("wk.hint.mnemonic")
          %td.col-9= @radical.mnemonic.html_safe
        %tr.d-flex
          %td.col-3= t("wk.level")
          %td.col-9= @radical.level
        %tr.d-flex
          %td.col-3= t("wk.id")
          %td.col-9= @radical.wk_id
        %tr.d-flex
          %td.col-3= t("wk.last_updated")
          %td.col-9= @radical.last_updated

.row
  .offset-lg-1.col-lg-10.offset-xl-2.col-xl-8
    %table{class: "table table-bordered table-striped table-sm mt-3"}
      %thead
        %tr.d-flex
          %th.col-1.text-center= t("wk.short.character")
          %th.col-5.text-center= t("wk.meaning")
          %th.col-5.text-center= t("wk.reading")
          %th.col-1.text-center= t("wk.level")
        - @radical.kanjis.by_level.each do |kanji|
          %tr.d-flex
            %td.col-1.text-center= link_to kanji.character, kanji
            %td.col-5= kanji.meaning
            %td.col-5= kanji.reading
            %td.col-1.text-center= kanji.level

.text-center
  = link_to t("wk.radical.radicals"), wk_radicals_path, class: "btn btn-success"
  = link_to t("wk.kanji.kanjis"), wk_kanjis_path, class: "btn btn-success"
  = link_to t("wk.vocab.vocabs"), wk_vocabs_path, class: "btn btn-success"
