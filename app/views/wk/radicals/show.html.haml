= render "utils/title", text: @radical.character_name

.row
  %div{class: center(lg: 10, xl: 8, xx: 6)}
    %section
      .header.text-center
        %h1= @radical.character_name(linked: true)
      .body
        %table{class: "table table-bordered"}
          %tbody
            %tr.d-flex
              %td.col-3= t("wk.hint.mnemonic")
              %td.col-9= @radical.mnemonic.html_safe
            %tr.d-flex
              %td.col-3= t("wk.level")
              %td.col-9= @radical.level
            %tr.d-flex
              %td.col-3= t("wk.id")
              %td.col-9= @radical.wk_id
            %tr.d-flex
              %td.col-3= t("wk.last_updated")
              %td.col-9= @radical.last_updated
        %table{class: "table table-bordered table-sm mt-3"}
          %thead
            %tr.d-flex
              %th.col-1.text-center= t("wk.short.character")
              %th.col-5.text-center= t("wk.meaning")
              %th.col-5.text-center= t("wk.reading")
              %th.col-1.text-center= t("wk.level")
            - @radical.kanjis.by_level.each do |kanji|
              %tr.d-flex
                %td.col-1.text-center= link_to kanji.character, kanji
                %td.col-5= kanji.meaning
                %td.col-5= kanji.reading
                %td.col-1.text-center= kanji.level
      .footer
        = link_to t("wk.radical.radicals"), last_search(wk_radicals_path), class: "btn btn-success btn-sm"
        = link_to t("wk.kanji.kanjis"), last_search(wk_kanjis_path), class: "btn btn-success btn-sm"
        = link_to t("wk.vocab.vocabs"), last_search(wk_vocabs_path), class: "btn btn-success btn-sm"
