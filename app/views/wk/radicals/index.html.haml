= render "utils/title", key: "wk.radical.radicals"

= form_tag wk_radicals_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :query, t("wk.radical.radical"), class: "sr-only"
  = text_field_tag :query, params[:query], class: "form-control mr-1 mb-1", placeholder: t("wk.radical.radical"), size: 16, autofocus: true
  = label_tag :level, t("wk.level"), class: "sr-only"
  = select_tag :level, wk_level_menu(params[:level]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :order, t("order"), class: "sr-only"
  = select_tag :order, wk_radical_order_menu(params[:order]), class: "form-control mr-1 mb-1 auto-submit"
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"

.row
  .offset-lg-1.col-lg-10.offset-xl-2.col-xl-8
    %table{class: "table table-bordered table-striped table-sm mt-3"}
      %thead
        %tr.d-flex
          %th.col-2.text-center= t("wk.radical.name")
          %th.col-1.text-center= t("wk.short.character")
          %th.col-8.text-center= t("wk.mnemonic")
          %th.col-1.text-center= t("wk.level")
      %tbody{id: "results"}
        = render "results", radicals: @radicals

.text-center
  = link_to t("wk.kanji.kanjis"), wk_kanjis_path, class: "btn btn-success"
