= render "utils/title", text: @kanji.character, header: true

.row
  .offset-md-1.col-md-10
    %table{class: "table table-bordered"}
      %tbody
        %tr.d-flex
          %td.col-3= t("wk.character")
          %td.col-9= @kanji.character
        %tr.d-flex
          %td.col-3= t("wk.radical.radicals")
          %td.col-9
            - @kanji.radicals.each_with_index do |radical, i|
              = link_to radical.character_name, radical
        %tr.d-flex
          %td.col-3= t("wk.meaning")
          %td.col-9= @kanji.meaning
        %tr.d-flex
          %td.col-3= t("wk.hint.meaning")
          %td.col-9= @kanji.meaning_mnemonic.html_safe
        %tr.d-flex
          %td.col-3= t("wk.hint.reading")
          %td.col-9= @kanji.reading_mnemonic.html_safe
        %tr.d-flex
          %td.col-3= t("wk.level")
          %td.col-9= @kanji.level
        %tr.d-flex
          %td.col-3= t("wk.id")
          %td.col-9= @kanji.wk_id
        %tr.d-flex
          %td.col-3= t("wk.last_updated")
          %td.col-9= @kanji.last_updated

.text-center
  = link_to t("wk.radical.radicals"), wk_radicals_path, class: "btn btn-success"
  = link_to t("wk.kanji.kanjis"), wk_kanjis_path, class: "btn btn-success"
