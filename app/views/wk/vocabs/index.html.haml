= render "wk/readings/quick_accent_updates"
= render "utils/title", key: "wk.vocab.vocabs"

= form_tag wk_vocabs_path, method: :get, class: "form-inline justify-content-center" do
  = label_tag :vquery, t("wk.vocab.vocab"), class: "sr-only"
  = text_field_tag :vquery, params[:vquery], class: "form-control mr-1 mb-1", placeholder: t("wk.vocab.vocab"), size: 16, autofocus: true
  = label_tag :notes, t("wk.vocab.notes"), class: "sr-only"
  = text_field_tag :notes, params[:notes], class: "form-control mr-1 mb-1", placeholder: t("wk.vocab.notes"), size: 10, autofocus: true
  = label_tag :level, t("wk.level"), class: "sr-only"
  = select_tag :level, wk_level_menu(params[:level]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :parts, t("wk.vocab.parts"), class: "sr-only"
  = select_tag :parts, wk_vocab_parts_menu(params[:parts]), class: "form-control mr-1 mb-1", multiple: true, size: 1
  = label_tag :order, t("order"), class: "sr-only"
  = select_tag :order, wk_vocab_order_menu(params[:order]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :id, t("wk.id"), class: "sr-only"
  = text_field_tag :id, params[:id], class: "form-control mr-1 mb-1", placeholder: t("wk.short.id"), size: 5
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"

%table{class: "table table-bordered table-striped table-sm mt-3"}
  %thead
    = render "table_header"
  %tbody#accent_updates
    = render "table_rows", vocabs: @vocabs.matches
    = render "utils/pagination_links", pager: @vocabs, columns: 4

.text-center
  = link_to t("wk.radical.radicals"), wk_radicals_path, class: "btn btn-success"
  = link_to t("wk.kanji.kanjis"), wk_kanjis_path, class: "btn btn-success"
