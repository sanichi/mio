= render "utils/title", key: "session.sign_in"

.row
  .col-md-8.col-md-offset-2
    = form_tag sessions_path, class: "form-horizontal", role: "form" do
      %fieldset
        .form-group
          = label_tag :password, t("session.password"), class: "control-label col-md-4"
          .col-md-4= text_field_tag :password, params[:password], class: "form-control", type: "password"
        .col-md-8.col-md-offset-2.text-center
          = submit_tag t("session.sign_in"), class: "btn btn-success"
