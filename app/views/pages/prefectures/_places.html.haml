- children = place.subregions

- if level == 0
  %h4= render "pages/prefectures/link", place: place
  = render "pages/prefectures/children", children: place.subregions, level: level + 1
- else
  %li
    = render "pages/prefectures/link", place: place
    = render "pages/prefectures/children", children: place.subregions, level: level + 1
