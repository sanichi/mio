:ruby
  lo = Layout.new(
    xl: [[1,1,1,1,1],[2,2]],
    md: [[1,1,1,1,1],[3,3]],
    xs: [[2,2,2,2,2],[4,4]],
  ).to_a
  inputs = [
    [:letter1, t("pages.wordle.letter1"), :text, lo[0], center: true, maxlength: 1, placeholder: "?"],
    [:letter2, t("pages.wordle.letter1"), :text, lo[1], center: true, maxlength: 1, placeholder: "?"],
    [:letter3, t("pages.wordle.letter1"), :text, lo[2], center: true, maxlength: 1, placeholder: "?"],
    [:letter4, t("pages.wordle.letter1"), :text, lo[3], center: true, maxlength: 1, placeholder: "?"],
    [:letter5, t("pages.wordle.letter1"), :text, lo[4], center: true, maxlength: 1, placeholder: "?"],
    [:present, t("pages.wordle.present"), :text, lo[5], center: true, maxlength: 5],
    [:absent,  t("pages.wordle.absent"),  :text, lo[6], center: true],
  ]
  max = 100
  my_meta_tags "pages.wordle"

%section
  .header.text-center
    %h3= t("pages.wordle.title")
  .body
    = render "utils/search/form", index: wordle_path, inputs: inputs, remote: false
    %p.text-center.mt-3
      = succeed(":") do
        = t("pages.wordle.gone")
      = succeed(",") do
        = @wordle.gone
      = succeed(":") do
        = t("pages.wordle.left")
      = @wordle.left
    - if @wordle.left > 0
      %p.ms-3.me-3{class: @wordle.left <= 10 ? "text-center" : ""}
        = succeed(@wordle.left > max ? ", ..." : "") do
          = @wordle.list.first(max).map(&:upcase).join(", ")
