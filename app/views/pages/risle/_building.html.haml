- defined?(x1) || x1 = 0
- defined?(y1) || y1 = 0
- defined?(x2) || x2 = 343
- defined?(y2) || y2 = y1
- defined?(x3) || x3 = x2
- defined?(y3) || y3 = 150
- defined?(x4) || x4 = x1
- defined?(y4) || y4 = y3
- tx = (x1 + x2 + x3 + x4) / 4
- ty = (y1 + y2 + y3 + y4) / 4

%g{class: "building", transform: "translate(#{x},#{y}) rotate(#{r})"}
  %polygon{points: "#{x1},#{y1} #{x2},#{y2} #{x3},#{y3} #{x4},#{y4}"}
  %text{x: tx, y: "#{ty + 16}", transform: "rotate(#{-r},#{tx},#{ty})"}= num
