= render "utils/title", key: "mass.mass"

- content_for :javascript do
  = render "weight_elm.min.js"
  = render "weight.js"

.row.mb-3
  .div{class: center(xs: 12)}
    .div{id: "elm-app"}

= form_tag weight_path, method: :get, remote: false, class: "form-inline justify-content-center mt-5" do
  = label_tag :months, t("mass.months"), class: "sr-only"
  = select_tag :unit, mass_months_menu, class: "form-control mr-3"
  = label_tag :unit, t("mass.unit.unit"), class: "sr-only"
  = select_tag :unit, mass_unit_menu, class: "form-control mr-3"
