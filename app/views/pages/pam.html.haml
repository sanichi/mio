:ruby
  lo = Layout.new(xl: [2], md: [4], xs: [6]).to_a
  inputs = [[:q, t("search"), :text, lo[0], placeholder: t("search")]]

= render "utils/title", key: "pages.pam"

%section
  .header.text-center
    %h3= t("pages.pam")
  .body
    = render "utils/search/form", index: pam_path, inputs: inputs, remote: false
  - if @answer
    .footer.text-center
      %h3= @answer
