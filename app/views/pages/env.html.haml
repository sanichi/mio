= render "utils/title", key: "pages.env"

.row
  %div{class: center(xs: 10, md: 8, xl: 6)}
    %section
      .header.text-center
        %h3= t("pages.env")
      .body
        %table{class: "table table-bordered table-sm"}
          %tbody
            %tr
              %th= "Host"
              %td= @host
            %tr
              %th= "Env"
              %td= ENV["RAILS_ENV"]
            %tr
              %th= "Ruby"
              %td= "#{RUBY_VERSION}-p#{RUBY_PATCHLEVEL}"
            %tr
              %th= "Rails"
              %td= Rails::VERSION::STRING
            %tr
              %th= "Bundler"
              %td= ENV["BUNDLER_VERSION"]
            %tr
              %th= "Postgres"
              %td= @postgres_version
            - if @passenger_version
              %tr
                %th= "Passenger"
                %td= @passenger_version
            - if @puma_version
              %tr
                %th= "Puma"
                %td= @puma_version
            %tr
              %th= "User"
              %td= ENV["USER"]
            %tr
              %th= "Shell"
              %td= ENV["SHELL"]
            %tr
              %th= "Pwd"
              %td= ENV["PWD"]
            %tr
              %th= "Gems"
              %td= ENV["GEM_HOME"]
            %tr
              %th= "Path"
              %td= ENV["PATH"].split(":")
