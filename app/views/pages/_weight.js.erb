$(function() {
  Elm.Weight.init({
    node: $('#elm-app').get(0),
    flags: {
      debug: true,
      months: <%= Mass::DEFAULT_START %>,
      unit: '<%= Mass::DEFAULT_UNIT.key.to_s %>',
      kilos: [<%= @kilos.map(&:to_s).join(',') %>],
      dates: ['<%= @dates.map(&:to_s).join("','").html_safe %>']
    }
  });
});
