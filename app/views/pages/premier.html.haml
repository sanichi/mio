- content_for :javascript do
  = render partial: "pages/premier/tooltips", formats: :js

= render "utils/title", key: "pages.premier.name"

.row
  %div{class: center(xl: 8, lg: 10)}
    %section
      .header.text-center
        %h3= t("pages.premier.name")
      .body
        %table{class: "table table-bordered table-striped table-sm"}
          %thead
            %tr
              %th.shrink
              %th.text-center= t("pages.premier.played")
              %th.text-center.d-none.d-sm-table-cell= t("pages.premier.won")
              %th.text-center.d-none.d-sm-table-cell= t("pages.premier.drawn")
              %th.text-center.d-none.d-sm-table-cell= t("pages.premier.lost")
              %th.text-center.d-none.d-sm-table-cell= t("pages.premier.for")
              %th.text-center.d-none.d-sm-table-cell= t("pages.premier.against")
              %th.text-center= t("pages.premier.diff")
              %th.text-center= t("pages.premier.points")
              %th.shrink.d-none.d-md-table-cell
              %th.shrink
          %tbody
            - @teams.each do |t|
              %tr
                %th.shrink= t.short
                %td.text-center= t.played
                %td.text-center.d-none.d-sm-table-cell= t.won
                %td.text-center.d-none.d-sm-table-cell= t.drawn
                %td.text-center.d-none.d-sm-table-cell= t.lost
                %td.text-center.d-none.d-sm-table-cell= t.for
                %td.text-center.d-none.d-sm-table-cell= t.against
                %td.text-center= t.diff
                %th.text-center= t.points
                %td.shrink.font-monospace.d-none.d-md-table-cell
                  - t.latest_results.each do |m|
                    = render "pages/premier/latest", team: t, match: m
                %td.shrink.text-monospace
                  - t.upcoming_fixtures.each do |m|
                    = render "pages/premier/upcoming", team: t, match: m
