= render "utils/title", key: "pages.premier.name", header: true

- content_for :javascript do
  = render partial: "premier_tooltips", formats: :js

.row.mt-3
  %div{class: center(xl: 8, lg: 10)}
    %table{class: "table table-bordered table-striped table-sm"}
      %thead
        %tr
          %th.shrink
          %th.text-center= t("pages.premier.played")
          %th.text-center= t("pages.premier.won")
          %th.text-center= t("pages.premier.drawn")
          %th.text-center= t("pages.premier.lost")
          %th.text-center.d-none.d-sm-table-cell= t("pages.premier.for")
          %th.text-center.d-none.d-sm-table-cell= t("pages.premier.against")
          %th.text-center.d-none.d-sm-table-cell= t("pages.premier.diff")
          %th.text-center= t("pages.premier.points")
          %th.shrink
          %th.shrink.d-none.d-md-table-cell
      %tbody
        - @teams.each do |t|
          %tr
            %th.shrink= t.short
            %td.text-center= t.played
            %td.text-center= t.won
            %td.text-center= t.drawn
            %td.text-center= t.lost
            %td.text-center.d-none.d-sm-table-cell= t.for
            %td.text-center.d-none.d-sm-table-cell= t.against
            %td.text-center.d-none.d-sm-table-cell= t.diff
            %th.text-center= t.points
            %td.shrink.text-monospace
              - t.latest_results.each do |m|
                = render "premier_latest", team: t, match: m
            %td.shrink.text-monospace.d-none.d-md-table-cell
              - t.upcoming_fixtures.each do |m|
                = render "premier_upcoming", team: t, match: m
