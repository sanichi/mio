= render "utils/title", key: "verb.verbs"

.text-center
  = form_tag verbs_path, method: :get, remote: true, class: "form-inline", role: "form" do
    .form-group
      = label_tag :q, t("query"), class: "sr-only"
      = text_field_tag :q, params[:q], class: "form-control", placeholder: t("query"), size: 16
    .form-group
      = label_tag :category, t("verb.category"), class: "sr-only"
      = select_tag :category, verb_category_menu(params[:category], search: true), class: "form-control auto-submit"
    .form-group
      = label_tag :transitivity, t("verb.transitivity"), class: "sr-only"
      = select_tag :transitivity, verb_transitivity_search_menu(params[:transitivity]), class: "form-control auto-submit"
    .form-group
      = label_tag :order, t("order"), class: "sr-only"
      = select_tag :order, verb_search_order_menu(params[:order]), class: "form-control auto-submit"
    = button_tag t("search"), type: "submit", class: "btn btn-success"

.row.top_margin
  .col-xs-12
    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th.col-xs-1= t("vocab.kanji")
          %th.col-xs-2= t("vocab.reading")
          %th.col-xs-5= t("vocab.meaning")
          %th.col-xs-3= t("verb.category")
          %th.col-xs-1.text-center= t("verb.short.transitivity")
      %tbody{id: "results"}
        = render "results", verbs: @verbs

.text-center
  - if can?(:create, Verb)
    = link_to t("verb.new"), new_verb_path, class: "btn btn-info"
