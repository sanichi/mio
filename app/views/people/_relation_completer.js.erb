$(function() {
  $('#term').autocomplete({
    source: '/people/match.json',
    minLength: 2,
    select: function(event, ui) {
      if (ui.item) {
        $.ajax({
          url: '/people/<%= id %>/relative.json?other=' + ui.item.id,
          dataType: 'html'
        }).done(function(data) {
          $('#relative').text(data);
        });
      } else {
        $('#relative').text('');
      }
    }
  });
});
