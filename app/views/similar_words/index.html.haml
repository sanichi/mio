= render "utils/title", key: "vocab.similar.words"

.text-center
  = form_tag similar_words_path, method: :get, remote: true, class: "form-inline", role: "form" do
    .form-group
      = label_tag :q, t("query"), class: "sr-only"
      = text_field_tag :q, params[:q], class: "form-control", size: 16, placeholder: t("vocab.readings")
    = button_tag t("search"), type: "submit", class: "btn btn-success"

.row.top_margin
  .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    %table{class: "table table-bordered"}
      %thead
        %tr
          %th= t("vocab.readings")
      %tbody{id: "results"}
        = render "results", similar_words: @similar_words

.text-center.top_margin
  - if can?(:create, SimilarWord)
    = link_to t("vocab.similar.new"), new_similar_word_path, class: "btn btn-info"
