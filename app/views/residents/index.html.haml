= render "utils/title", key: "resident.residents", header: true

= content_for :javascript do
  = render "residents.js"

= form_tag residents_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :last_name, t("person.last_name"), class: "sr-only"
  = text_field_tag :last_name, params[:last_name], class: "form-control mr-1 mb-1", placeholder: t("person.last_name"), size: 10
  = label_tag :first_names, t("person.first_names"), class: "sr-only"
  = text_field_tag :first_names, params[:first_names], class: "form-control mr-1 mb-1", placeholder: t("person.first_names"), size: 10
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"
  = link_to t("reset"), "#", class: "btn btn-success mr-1 mb-1", id: "reset"

.row.mt-3
  .col-sm-10.offset-sm-1.col-md-8.offset-md-2
    %table{class: "table table-bordered table-striped table-sm"}
      %thead
        %tr
          %th= t("name")
          %th= t("email")
          %th.text-center= t("flat.short.owner")
          %th.text-center= t("flat.short.tenant")
          %th.text-center= t("flat.short.landlord")
          %th= t("vehicle.vehicles")
      %tbody{id: "results"}
        = render "results", residents: @residents

= render "bottom_links", focus: :resident
