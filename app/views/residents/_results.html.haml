- residents.matches.each do |resident|
  %tr
    %td.text-center= resident.block
    %td.text-center= resident.flat
    %td.text-center= resident.bay if resident.bay > 0
    %td= resident.name
    %td= resident.email
    - if can?(:edit, resident)
      %td.text-center= link_to t("edit"), edit_resident_path(resident), class: "btn btn-info btn-xs"
= render "utils/pagination_links", pager: residents, columns: 5 + (can?(:edit, Resident) ? 1 : 0)
