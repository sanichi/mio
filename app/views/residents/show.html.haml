= render "utils/title", text: t("resident.resident"), header: true

.row
  .col-md-offset-3.col-md-6
    %table{class: "table table-bordered table-striped"}
      %tbody
        %tr
          %th= t("name")
          %td= @resident.name
        %tr
          %th= t("email")
          %td= @resident.email
        %tr
          %th= t("vehicle.vehicles")
          %td
            - @resident.vehicles.each do |vehicle|
              = link_to vehicle.registration, vehicle
        %tr
          %th= t("owner")
          %td
            - @resident.ownerships.each do |flat|
              = link_to flat.address, flat
        %tr
          %th= t("flat.tenant")
          %td
            - @resident.tenancies.each do |flat|
              = link_to flat.address, flat

.text-center
  - if can?(:manage, Resident)
    = link_to t("edit"), edit_resident_path(@resident), class: "btn btn-info"
    = link_to t("resident.new"), new_resident_path, class: "btn btn-info"
  = link_to t("resident.residents"), residents_path, class: "btn btn-success"
