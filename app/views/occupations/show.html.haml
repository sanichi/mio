= render "utils/title", text: @occupation.kanji

= render "vocabs/quick_accent_updates", selector: "#accent_update"

%h1.text-center= @occupation.vocab ? @occupation.vocab.linked_kanji : @occupation.kanji

.row
  .offset-md-2.col-md-8
    %table{class: "table table-bordered"}
      %tbody
        %tr
          %th= t("vocab.reading")
          %td= @occupation.reading
        %tr
          %th= t("vocab.meaning")
          %td= @occupation.meaning
        - if @occupation.vocab
          %tr
            %th= t("vocab.vocab")
            %td= link_to @occupation.kanji, @occupation.vocab
          %tr#accent_update
            %th= t("vocab.audio")
            %td= render "vocabs/audio_accent", vocab: @occupation.vocab

.text-center
  = link_to t("vocab.occupation.occupations"), occupations_path, class: "btn btn-success"
  - if can?(:manage, Occupation)
    = link_to t("edit"), edit_occupation_path(@occupation), class: "btn btn-info"
