= render "utils/title", key: "vocab.occupation.occupations"

.text-center
  = form_tag occupations_path, method: :get, remote: true, class: "form-inline", role: "form" do
    .form-group
      = label_tag :q, t("search"), class: "sr-only"
      = text_field_tag :q, params[:q], class: "form-control", placeholder: t("search"), size: 16
    .form-group
      = label_tag :order, t("order"), class: "sr-only"
      = select_tag :order, occupation_search_order_menu(params[:order]), class: "form-control auto-submit"
    .form-group
      = label_tag :ending, t("vocab.occupation.ending.ending"), class: "sr-only"
      = select_tag :ending, occupation_ending_menu(params[:ending]), class: "form-control auto-submit"
    = button_tag t("search"), type: "submit", class: "btn btn-success"

.row.top_margin
  .col-xs-12
    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th.col-xs-2= t("vocab.kanji")
          %th.col-xs-4= t("vocab.reading")
          %th.col-xs-5= t("vocab.meaning")
          %th.col-xs-1.text-center= t("vocab.audio")
      %tbody{id: "results"}
        = render "results", occupations: @occupations

.text-center
  - if can?(:create, Occupation)
    = link_to t("vocab.occupation.new"), new_occupation_path, class: "btn btn-info"
