.row
  .col-md-12
    = form_for bay, html: { class: "form-horizontal", role: "form" } do |f|
      %fieldset
        - shared = { form: f, object: bay, col: "md", pad: 3 }
        = render "utils/text_field_for", shared.merge(param: :number, text: t("bay.number"), width: 4)
        = render "utils/select_for", shared.merge(param: :resident_id, text: t("bay.owner"), width: 4, menu: bay_owner_menu(bay))

      .row
        .col-md-offset-4.col-md-8
          = f.submit t("save"), class: "btn btn-info"
          = link_to t("cancel"), bays_path, class: "btn btn-default"
          - unless bay.new_record?
            = link_to t("delete"), bay, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
