= render "utils/title", key: "user.users", header: true

:ruby
  inputs = [
    [:email, t("email"),             :text,   size: 10, value: params[:email]],
    [:year,  t("person.last_name"),  :text,   size: 10, value: params[:last_name]],
    [:year,  t("person.first_name"), :text,   size: 10, value: params[:first_name]],
  ]
= render "utils/search/form", index: users_path, inputs: inputs

.row.mt-3
  %div{class: center(lg: 6, md: 8, sm: 10)}
  .offset-md-2.col-md-8.offset-xl-3.col-xl-6
    %table{class: "table table-bordered table-striped table-sm"}
      %thead
        %tr
          %th= t("email")
          %th= t("name")
          %th= t("user.role")
      %tbody{id: "results"}
        = render "results", users: @users

- if can?(:create, User)
  .text-center
    = link_to t("user.new"), new_user_path, class: "btn btn-info"
