= render "utils/title", text: @user.email, header: true

.row
  %div{class: center(xl:6, md: 8, xs: 10)}
    %table{class: "table table-bordered table-striped table-sm"}
      %tbody
        %tr
          %th= t("user.role")
          %td= t("user.roles.#{@user.role}")
        %tr
          %th= t("person.person")
          %td= link_to @user.person.name(full: false), @user.person if @user.person

.text-center
  = link_to t("user.users"), users_path, class: "btn btn-success"
  - if can?(:manage, User)
    = link_to t("edit"), edit_user_path(@user), class: "btn btn-info"
