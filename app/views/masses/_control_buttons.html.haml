- if defined?(mgd)
  - Mass::UNITS.keys.each do |u|
    - if u == unit.key
      .btn.btn-secondary= t("mass.unit.short.#{u}")
    - else
      = link_to t("mass.unit.short.#{u}"), graph_masses_path(unit: u, start: mgd.start), remote: true, class: "btn btn-success"
  - mgd.start_options.each do |text, option|
    - if option == mgd.start
      .btn.btn-secondary= text
    - else
      = link_to text, graph_masses_path(unit: unit.key, start: option), class: "btn btn-success"
  = link_to t("list"), masses_path(unit: unit.key), class: "btn btn-info"
- else
  - Mass::UNITS.keys.each do |u|
    - if u == unit.key
      .btn.btn-secondary= t("mass.unit.short.#{u}")
    - else
      = link_to t("mass.unit.short.#{u}"), masses.page_path(unit: u, format: "js"), remote: true, class: "btn btn-success"
  = link_to t("graph"), graph_masses_path(unit: unit.key), class: "btn btn-info"
