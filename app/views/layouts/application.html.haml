!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : t("mio")
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "flatly.min", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container.top_margin.bottom_margin
      = render "layouts/nav"
      = yield
