    - if [:aoc, :magic, :play, :retina].map{ |p| can?(p, Page) }.any? || [Bucket, Device, Favourite, Interface, Login, Mass, Opening, Position, Tapa, User].map{ |c| can?(:read, c) }.any?
      .nav-item.dropdown
        = render "layouts/dropdown_head", text: t("other"), id: "navbarOtherMenu"
