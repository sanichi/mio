= render "utils/title", text: t("flat.flat"), header: true

.row
  .offset-md-3.col-md-6
    %table{class: "table table-bordered table-striped table-sm"}
      %tbody
        %tr
          %th= t("flat.building")
          %td= @flat.building
        %tr
          %th= t("flat.number")
          %td= @flat.number
        %tr
          %th= t("flat.block")
          %td= @flat.block
        %tr
          %th= t("flat.bay")
          %td= @flat.bay
        %tr
          %th= t("flat.category")
          %td= @flat.category
        %tr
          %th= t("flat.name")
          %td= @flat.name

.text-center
  = link_to t("flat.flats"), flats_path, class: "btn btn-success"
  - if can?(:manage, Flat)
    = link_to t("edit"), edit_flat_path(@flat), class: "btn btn-info"

- if @flat.notes.present?
  .card.mt-3
    .card-header
      = t("notes")
    .card-body= @flat.notes_html
