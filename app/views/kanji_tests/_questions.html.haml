.row
  .offset-lg-1.col-lg-10.offset-xl-2.col-xl-8
    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th= t("vocab.kanji")
          %th= t("vocab.meaning")
          %th= t("vocab.onyomi")
          %th= t("vocab.kunyomi")
          %th
      %tbody
        - test.kanji_questions.each_with_index do |q, i|
          - if !(test_finished && q.answer)
            %tr
              %td= link_to q.kanji.symbol, q.kanji
              %td= q.kanji.meaning
              %td= render "kanas", yomis: q.kanji.on_yomis
              %td= render "kanas", yomis: q.kanji.kun_yomis
              %td.text-center
                = t("symbol.#{q.answer ? 'tick' : 'cross'}")
