- defined?(skip_link) || skip_link = ""

- yomis.each_with_index.reverse_each do |yomi, i|
  = succeed(i == 0 ? "" : ",") do
    - if yomi.reading.kana == skip_link
      - if yomi.important
        %strong= yomi.reading.kana
      - else
        %span= yomi.reading.kana
    - else
      = link_to yomi.reading do
        - if yomi.important
          %strong= yomi.reading.kana
        - else
          %span= yomi.reading.kana
