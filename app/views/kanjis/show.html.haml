= render "vocabs/multi_search"

= content_for :javascript do
  = render "vocabs/quick_accent_update.js"

= render "utils/title", text: @kanji.symbol, header: true

.row
  .offset-md-2.col-md-8.offset-lg-3.col-lg-6
    %table{class: "table table-bordered table-striped"}
      %tbody
        %tr.d-flex
          %th.col-3= t("vocab.onyomi")
          %td.col-9= render "kanas", yomis: @kanji.on_yomis
        %tr.d-flex
          %th.col-3= t("vocab.kunyomi")
          %td.col-9= render "kanas", yomis: @kanji.kun_yomis
        %tr.d-flex
          %th.col-3= t("vocab.meaning")
          %td.col-9= @kanji.meaning
        %tr.d-flex
          %th.col-3= t("vocab.level")
          %td.col-9= @kanji.level

.text-center
  = render "external_links", symbol: @kanji.symbol

%table{class: "table table-bordered table-striped table-sm mt-3"}
  %thead
    %tr.d-flex
      %th.col-1= t("vocab.kanji")
      %th.col-2= t("vocab.reading")
      %th.col-1.text-center= t("vocab.audio")
      %th.col-4= t("vocab.meaning")
      %th.col-3= t("vocab.category")
      %th.col-1.text-center= t("vocab.level")
  %tbody
    - @vocabs.each do |vocab|
      %tr.d-flex
        %td.col-1= link_to vocab.kanji, vocab
        %td.col-2= vocab.reading
        %td.col-1.text-center= render "vocabs/audio_accent", vocab: vocab
        %td.col-4= vocab.meaning
        %td.col-3= vocab.category
        %td.col-1.text-center= vocab.level

.text-center
  = link_to t("vocab.kanjis"), kanjis_path, class: "btn btn-success"
  = link_to t("vocab.readings"), readings_path, class: "btn btn-success"
