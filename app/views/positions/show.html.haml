= render "utils/title", text: t("position.position")

.row
  .col-md-offset-3.col-md-6
    %table{class: "table table-bordered table-striped"}
      %tbody
        %tr
          %th= t("position.name")
          %td= @position.name
        %tr
          %th= t("position.fen")
          %td= @position.fen

.text-center
  - if can?(:update, @position)
    = link_to t("edit"), edit_position_path(@position), class: "btn btn-info"
  = link_to t("position.positions"), positions_path, class: "btn btn-success"

- if @position.notes.present?
  .panel.panel-default.top_margin
    .panel-heading
      = t("notes")
    .panel-body= @position.notes_html
