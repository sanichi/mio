= render "utils/title", key: "picture.pictures"

.text-center
  = form_tag pictures_path, method: :get, remote: true, class: "form-inline", role: "form" do
    .form-group
      = label_tag :last_name, t("person.last_name"), class: "sr-only"
      = text_field_tag :last_name, params[:last_name], class: "form-control", placeholder: t("person.last_name"), size: 10
    .form-group
      = label_tag :last_name, t("person.first_name"), class: "sr-only"
      = text_field_tag :first_names, params[:first_names], class: "form-control", placeholder: t("person.first_name"), size: 10
    .form-group
      = label_tag :description, t("description"), class: "sr-only"
      = text_field_tag :description, params[:description], class: "form-control", placeholder: t("description"), size: 10
    = button_tag t("search"), type: "submit", class: "btn btn-success"

#results.top_margin
  = render "results", pictures: @pictures

.text-center.top_margin
  - if can?(:create, Picture)
    = link_to t("picture.new"), new_picture_path, class: "btn btn-info"
