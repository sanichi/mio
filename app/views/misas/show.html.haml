= render "utils/title", text: t("misa.misa")

.card
  .card-header
    = @misa.full_title
    .float-right
      .small
        = @misa.published
        - if @misa.url
          = link_to t("misa.abbrev.url"), @misa.url, target: t("misa.target")
        - if @misa.alt
          = link_to t("misa.abbrev.alt"), @misa.alt, target: t("misa.target")
        = @misa.minutes
        - if @misa.japanese
          = t("misa.abbrev.japanese")
  - if @misa.note.present?
    .card-body= @misa.note_html

.text-center.mt-3
  = link_to t("misa.misas"), last_search(misas_path), class: "btn btn-success"
  - if can?(:edit, Misa)
    = link_to t("edit"), edit_misa_path(@misa), class: "btn btn-info"
