= render "utils/title", text: t("misa.misa")

.card
  .card-header
    = @misa.full_title
    .float-right
      .small
        = @misa.published
        - if @misa.long
          = link_to t("misa.abbrev.long"), @misa.long_url, target: @misa.target
        - if @misa.short
          = link_to t("misa.abbrev.short"), @misa.short_url, target: @misa.target
        = @misa.minutes
        - if @misa.japanese
          = t("misa.abbrev.japanese")
  - if @misa.note.present?
    .card-body= @misa.note_html

.text-center.mt-3
  = link_to t("misa.misas"), misas_path, class: "btn btn-success"
  - if can?(:edit, Misa)
    = link_to t("edit"), edit_misa_path(@misa), class: "btn btn-info"
  - if can?(:delete, Misa)
    = link_to t("delete"), @misa, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
