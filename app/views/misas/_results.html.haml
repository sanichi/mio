- misas.matches.each do |misa|
  %tr
    %td= link_to misa.title, misa
    %td= t("misa.categories.#{misa.category}")
    %td.text-center= misa.lines
    %td.text-center= misa.minutes
    %td.text-center= misa.japanese ? t("symbol.tick") : t("symbol.cross")
    %td.text-center
      - if misa.long
        = link_to t("misa.abbrev.long"), misa.long_url, target: misa.target
      = link_to t("misa.abbrev.short"), misa.short_url, target: misa.target
= render "utils/pagination_links", pager: misas, columns: 6
