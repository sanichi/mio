= render "utils/title", text: @place.jname

= render "map", vb: @place.vb

.row.mt-3
  .offset-md-3.col-md-6
    %table{class: "table table-bordered table-striped table-sm"}
      %tbody
        %tr
          %th= t("place.jname")
          %td
            %strong= @place.jname
            = precede("(") do
              = succeed(")") do
                = @place.reading
        %tr
          %th= t("place.kanji")
          %td
            - @place.jname.split("").each do |c|
              - if k = Wk::Kanji.find_by(character: c)
                = link_to c, k
        %tr
          %th= t("place.ename")
          %td= render "wiki", place: @place
        %tr
          %th= t("place.category")
          %td= t("place.categories.#{@place.category}")
        %tr
          %th= t("place.pop")
          %td= @place.millions
        %tr
          %th= t("place.vbox")
          %td= @place.vbox
        - if p = @place.region
          %tr
            %th= t("place.region")
            %td
              = link_to p.jname, p
              = "(#{p.ename} #{p.millions})"
        - @place.subregions.by_pop.each do |p|
          %tr
            %th= t("place.child")
            %td
              = link_to p.jname, p
              = "(#{p.ename} #{p.millions})"

.text-center.mt-3
  = link_to t("place.places"), last_search(places_path), class: "btn btn-success"
  - if can?(:edit, Team)
    = link_to t("edit"), edit_place_path(@place), class: "btn btn-info"
