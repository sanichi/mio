= render "utils/title", key: "problem.problems"

= form_tag problems_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :level, t("problem.level"), class: "sr-only"
  = select_tag :level, problem_level_menu(params[:level], search: true), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :category, t("problem.category"), class: "sr-only"
  = select_tag :category, problem_category_menu(params[:category], search: true), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :subcategory, t("problem.subcategory"), class: "sr-only"
  = select_tag :subcategory, problem_subcategory_menu(params[:subcategory], search: true), class: "form-control mr-1 mb-1 auto-submit"
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"

.row.mt-3
  .col-md-10.offset-md-1.col-lg-8.offset-lg-2.col-xl-6.offset-xl-3
    %table{class: "table table-bordered table-striped table-sm mt-3"}
      %thead
        %tr
          %th= t("problem.description")
      %tbody{id: "results"}
        = render "results", problems: @problems

- if can?(:create, Misa)
  .text-center.mt3
    = link_to t("problem.new"), new_problem_path, class: "btn btn-info"
