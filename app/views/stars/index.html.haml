:ruby
  lo = Layout.new(
    xl: [2,2,2],
    md: [3,3,3],
    xs: [4,4,4],
  ).to_a
  inputs = [
    [:q,     t("query"), :text,   lo[0], placeholder: t("search"), autofocus: true],
    [:order, t("order"), :select, lo[1], menu: star_search_order_menu(params[:order])],
    [:magnitude, t("star.magnitude"), :text, lo[1], placeholder: t("star.magnitude")],
  ]

= render "utils/title", key: "star.stars"

%section
  .header.text-center
    %h3= t("star.stars")
  .body
    = render "utils/search/form", index: stars_path, inputs: inputs
    %table{class: "table table-bordered table-sm mt-3"}
      %thead
        %tr
          %th= t("star.name")
          %th= t("star.constellation")
          %th.text-center= t("star.distance")
          %th.text-center= t("star.magnitude")
          %th.text-center= t("star.symbol.alpha")
          %th.text-center= t("star.symbol.delta")
      %tbody{id: "results"}
        = render "results", stars: @stars
  - if can?(:create, Star)
    .footer
      = link_to t("star.new"), new_star_path, class: "blue-btn"
