:ruby
  inputs = [
    [:name,             t("star.name"),          :text,  maxlength: Star::MAX_NAME],
    [:constellation_id, t("star.constellation"), :select,  menu: star_constellation_menu(star)],
    [:alpha,            t("star.alpha"),         :text],
    [:delta,            t("star.delta"),         :text],
    [:bayer,            t("star.bayer"),         :text],
    [:components,       t("star.components"),    :text],
    [:distance,         t("star.distance"),      :text],
    [:luminosity,       t("star.luminosity"),    :text],
    [:magnitude,        t("star.magnitude"),     :text],
    [:mass,             t("star.mass"),          :text],
    [:radius,           t("star.radius"),        :text],
    [:spectrum,         t("star.spectrum"),      :text],
    [:temperature,      t("star.temperature"),   :text],
    [:wikipedia,        t("star.wikipedia"),     :text,  maxlength: Star::MAX_NAME],
    [:note,             t("star.note"),          :area,  rows: 20],
  ]
= render "utils/crud/form", object: star, index: stars_path, inputs: inputs, title: title
