%table{class: "table table-bordered table-striped"}
  %thead
    %tr.d-flex
      %th.col-8= t("vocab.meaning")
      %th.col-2= t("vocab.kanji")
      %th.col-1.text-center= t("vocab.audio")
      %th.col-1
  %tbody
    - test.vocab_questions.each_with_index do |q, i|
      - if !(test_finished && q.answered_correctly?)
        %tr.d-flex
          %td.col-8= q.vocab.meaning
          %td.col-2= q.kanji
          %td.col-1.text-center
            - if q.answered_correctly? || test_finished
              = render "vocabs/audio_accent", vocab: q.vocab, autoplay: i == 0 && !test_finished
          %td.col-1text-center= t("symbol.#{q.kanji_correct ? 'tick' : 'cross'}")
