.row
  .offset-1.col-11.offset-sm-2.col-sm-10.offset-lg-3.col-lg-9
    = form_for t, html: { class: "form-horizontal" } do |f|
      - shared = { form: f, object: t, col: "md", pad: 2, width: 3 }
      = render "utils/select_for", shared.merge(param: :category, text: t("vocab.test.category"), menu: vocab_test_category_menu(t.category))
      = render "utils/select_for", shared.merge(param: :level, text: t("vocab.level"), menu: vocab_level_menu(t.level))
      .row
        .offset-md-2.col-md-10
          = f.submit t("save"), class: "btn btn-primary"
          = link_to t("cancel"), t.new_record?? vocab_tests_path : t, class: "btn btn-secondary"
