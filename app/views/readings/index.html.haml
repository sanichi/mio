= render "utils/title", key: "vocab.readings"

= form_tag readings_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :q, t("vocab.reading"), class: "sr-only"
  = text_field_tag :q, params[:q], class: "form-control mr-1 mb-1", placeholder: t("vocab.reading"), size: 16, autofocus: true
  = label_tag :order, t("order"), class: "sr-only"
  = select_tag :order, reading_search_order_menu(params[:order]), class: "form-control mr-1 mb-1 auto-submit"
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"

%table{class: "table table-bordered table-striped table-sm mt-3"}
  %thead
    %tr.d-flex
      %th.col-1.text-center= t("vocab.reading")
      %th.col-1.text-center= t("total")
      %th.col-5.text-center{colspan: 2}= t("vocab.onyomi")
      %th.col-5.text-center{colspan: 2}= t("vocab.kunyomi")
  %tbody{id: "results"}
    = render "results", readings: @readings

.text-center
  = link_to t("vocab.kanjis"), kanjis_path, class: "btn btn-success"
