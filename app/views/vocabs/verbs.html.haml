= render "utils/title", key: "vocab.verb.verbs"

= content_for :javascript do
  = render "quick_accent_update.js"

= form_tag verbs_vocabs_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :q, t("search"), class: "sr-only"
  = text_field_tag :q, params[:q], class: "form-control mr-1 mb-1", placeholder: t("search"), size: 16, autofocus: true
  = label_tag :type, t("vocab.verb.type"), class: "sr-only"
  = select_tag :type, vocab_verb_type_menu(params[:type]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :trans, t("vocab.trans.transitivity"), class: "sr-only"
  = select_tag :trans, vocab_verb_trans_menu(params[:trans]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :level, t("vocab.level"), class: "sr-only"
  = select_tag :level, vocab_level_menu(params[:level], search: true), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :order, t("order"), class: "sr-only"
  = select_tag :order, vocab_search_order_menu(params[:order]), class: "form-control mr-1 mb-1 auto-submit"
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"

%table{class: "table table-bordered table-striped table-sm mt-3"}
  %thead
    %tr.d-flex
      %th.col-1= t("vocab.kanji")
      %th.col-2= t("vocab.reading")
      %th.col-1.text-center= t("vocab.audio")
      %th.col-4= t("vocab.meaning")
      %th.col-3= t("vocab.category")
      %th.col-1.text-center= t("vocab.level")
  %tbody{id: "results"}
    = render "verb_results", verbs: @verbs
