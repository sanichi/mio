- defined?(autoplay) || autoplay = nil
- defined?(title)    || title    = nil

- color = vocab.pattern_color
- klass = "btn-#{color}"

%button.btn.btn-sm{type: "button", title: title, onclick: "document.getElementById('audio_#{vocab.id}').play()", id: "button_#{vocab.id}", class: klass, "data-id" => vocab.id}= vocab.accent_button_text
%audio{autoplay: autoplay, id: "audio_#{vocab.id}"}
  %source{src: "/system/audio/wani_kani/#{vocab.audio}", type: vocab.audio_type}
