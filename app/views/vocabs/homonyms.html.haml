= render "utils/title", key: "vocab.homonyms"

= form_tag homonyms_vocabs_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :q, t("search"), class: "sr-only"
  = text_field_tag :q, params[:q], class: "form-control", placeholder: t("search"), size: 16, autofocus: true
  = button_tag t("search"), type: "submit", class: "btn btn-success"

  %table{class: "table table-bordered table-striped table-sm mt-3"}
    %thead
      %tr.d-flex
        %th.col-1= t("vocab.kanji")
        %th.col-2= t("vocab.reading")
        %th.col-4= t("vocab.meaning")
        %th.col-3= t("vocab.category")
        %th.col-1.text-center= t("vocab.level")
        %th.col-1.text-center= t("vocab.audio")
    %tbody{id: "results"}
      = render "homonym_results", homonyms: @homonyms
