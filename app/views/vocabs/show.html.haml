= render "utils/title", text: @vocab.kanji

%h1.text-center= @vocab.linked_kanji

.row.mt-3
  .offset-md-2.col-md-8
    %table{class: "table table-bordered table-striped"}
      %tbody
        %tr#accent_updates
          %th= t("vocab.audio")
          %td= render "audio_accent", vocab: @vocab
        %tr
          %th= t("vocab.reading")
          %td{class: vocab_text_color(@vocab)}= @vocab.reading
        %tr
          %th= t("vocab.kanji")
          %td= link_to_if @kanji, @vocab.kanji, @kanji
        %tr
          %th= t("vocab.meaning")
          %td= @vocab.meaning
        %tr
          %th= t("vocab.category")
          %td= @vocab.category
        %tr
          %th= t("vocab.level")
          %td= @vocab.level
        - pair, twin = @vocab.pair
        - if pair && twin
          %tr
            %th= t("verb_pair.twin")
            %td
              = link_to twin.kanji, twin
              = precede("(") do
                = succeed(")") do
                  = link_to t("verb_pair.groups")[pair.group], verb_pairs_path(group: pair.group)
        %tr
          %th= t("vocab.burned")
          %td= t("symbol.#{@vocab.burned ? 'tick' : 'cross'}")

.text-center
  = render "external_links", kanji: @vocab.kanji

- if @vocab.verb?
  .mt-3
    = render "conjugate", verb: @vocab

.text-center.mt-3
  = link_to t("vocab.vocabs"), vocabs_path, class: "btn btn-success"
  - if can?(:manage, Vocab)
    = link_to t("edit"), edit_vocab_path(@vocab), class: "btn btn-info"
