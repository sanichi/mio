.row
  .col-md-offset-3.col-md-6
    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th.text-center{colspan: 2}= t("vocab.conjugation")
      %tbody
        - Vocab::TENSES.each do |tense|
          %tr
            %td= t("vocab.tense.#{tense}")
            %td= verb.conjugate(tense)
