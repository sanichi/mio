= render "multi_search", vocab: false

= render "utils/title", key: "vocab.vocabs"

= content_for :javascript do
  = render "quick_accent_update.js"

= form_tag vocabs_path, method: :get, remote: true, class: "form-inline justify-content-center" do
  = label_tag :q, t("vocab.vocab"), class: "sr-only"
  = text_field_tag :q, params[:q], class: "form-control mr-1 mb-1", placeholder: t("vocab.vocab"), size: 16, autofocus: true
  = label_tag :category, t("vocab.category"), class: "sr-only"
  = text_field_tag :category, params[:category], class: "form-control mr-1 mb-1", placeholder: t("vocab.category"), size: 10
  = label_tag :level, t("vocab.level"), class: "sr-only"
  = select_tag :level, vocab_level_menu(params[:level], search: true), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :morae, t("vocab.morae"), class: "sr-only"
  = select_tag :morae, vocab_morae_search_menu(params[:morae]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :accent, t("vocab.accent"), class: "sr-only"
  = select_tag :accent, vocab_accent_search_menu(params[:accent]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :special, t("vocab.special.special"), class: "sr-only"
  = select_tag :special, vocab_special_search_menu(params[:special]), class: "form-control mr-1 mb-1 auto-submit"
  = label_tag :order, t("order"), class: "sr-only"
  = select_tag :order, vocab_search_order_menu(params[:order]), class: "form-control mr-1 mb-1 auto-submit"
  = button_tag t("search"), type: "submit", class: "btn btn-success mr-1 mb-1"

  %table{class: "table table-bordered table-striped table-sm mt-3"}
    %thead
      %tr.d-flex
        %th.col-1= t("vocab.kanji")
        %th.col-2= t("vocab.reading")
        %th.col-1.text-center= t("vocab.audio")
        %th.col-4= t("vocab.meaning")
        %th.col-3= t("vocab.category")
        %th.col-1.text-center= t("vocab.level")
    %tbody{id: "results"}
      = render "results", vocabs: @vocabs

.text-center
  - if can?(:create, Vocab)
    = link_to t("vocab.new"), new_vocab_path, class: "btn btn-info"
