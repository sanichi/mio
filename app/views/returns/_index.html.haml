- if returns.any?
  .row
    .col-md-offset-4.col-md-4
      %h3.text-center= t("return.returns")
      %table{class: "table table-bordered table-striped"}
        %tbody
          - count, total = 0, 0.0
          - returns.each do |ret|
            - count += 1
            - total += ret.percent
            %tr
              %td.text-center= ret.financial_year
              %td.text-center= ret.formatted_percent
              - if can?(:edit, Return)
                %td.text-center= link_to t("edit"), edit_polymorphic_path([returnable, ret]), class: "btn btn-info btn-xs"
          %tr
            %th
            %th.text-center= "%.01f" % (total / count)
            - if can?(:edit, Return)
              %th
