= render "utils/title", key: "transaction.summary"

.row
  .offset-md-1.col-md-10
    %table{class: "table table-bordered table-striped table-sm"}
      %thead
        %tr
          %th.text-center= t("transaction.description")
          %th.text-center= t("transaction.item.investment")
          %th.text-center= t("transaction.value")
          %th.text-center= t("transaction.quantity")
          %th.text-center= t("transaction.item.performance")
          %th.text-center= t("transaction.item.annual_performance")
          %th.text-center= t("transaction.item.start")
          %th.text-center= t("transaction.item.end")
      %tbody
        - @summary.items.each do |item|
          %tr
            %td= link_to item.description, transactions_path(description: item.description)
            %td.text-right= "%.2f" % item.initial_investment if item.initial_investment
            %td.text-right= "%.2f" % item.value
            %td.text-center= item.quantity
            %td.text-center= "%.1f" % item.performance if item.performance.present?
            %td.text-center= "%.1f" % item.annual_performance if item.annual_performance.present?
            %td.text-center= item.start_date.strftime("%b&nbsp;%y").html_safe
            %td.text-center= item.end_date.strftime("%b&nbsp;%y").html_safe if item.quantity.nil? || item.quantity == 0

.text-center
  = link_to t("transaction.transactions"), transactions_path, class: "btn btn-success"
  = link_to t("upload.uploads"), uploads_path, class: "btn btn-success"
