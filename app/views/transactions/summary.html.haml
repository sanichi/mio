= render "utils/title", key: "transaction.summary"

.row
  .col-md-offset-1.col-md-10
    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th.text-center.col-md-8= t("transaction.description")
          %th.text-center.col-md-1= t("transaction.value")
          %th.text-center.col-md-1= t("transaction.quantity")
          %th.text-center.col-md-1= t("transaction.abbrev.performance")
          %th.text-center.col-md-1= t("transaction.abbrev.annual_performance")
      %tbody
        - @summary.items.each do |item|
          %tr
            %td= link_to item.description, transactions_path(description: item.description)
            %td.text-right= "%.1f" % item.value
            %td.text-center= item.quantity
            %td.text-center= "%.1f" % item.performance if item.performance.present?
            %td.text-center= "%.1f" % item.annual_performance if item.annual_performance.present?

.text-center
  = link_to t("transaction.transactions"), transactions_path, class: "btn btn-success"
  = link_to t("upload.uploads"), uploads_path, class: "btn btn-success"
