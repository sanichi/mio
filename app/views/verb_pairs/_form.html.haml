.row
  .offset-md-1.col-md-11.offset-lg-2.col-md-10.offset-xl-3.col-xl-6
    = form_for pair, html: { class: "form-horizontal" } do |f|
      - shared = { form: f, object: pair, col: "md", pad: 4, width: 3 }
      = render "utils/select_for", shared.merge(param: :transitive_id, text: t("verb_pair.transitive"), menu: verb_pair_transitive_menu(pair.transitive_id))
      = render "utils/select_for", shared.merge(param: :intransitive_id, text: t("verb_pair.intransitive"), menu: verb_pair_intransitive_menu(pair.intransitive_id))
      = render "utils/select_for", shared.merge(param: :group, text: t("verb_pair.group"), menu: verb_pair_group_menu(pair.group))
      .row
        .offset-md-4.col-md-8
          = f.submit t("save"), class: "btn btn-primary"
          = link_to t("cancel"), pair.new_record?? verb_pairs_path : pair, class: "btn btn-secondary"
          - unless pair.new_record?
            = link_to t("delete"), pair, class: "btn btn-danger", method: :delete, data: { confirm: t("sure") }
